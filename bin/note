#! /usr/bin/bash

# CURRENTTIME=`date +"%A, %d %b %Y"`
CURRENTDATE=`LC_TIME=da_DK.utf8 date +"%A, den %-d.%B '%y"`

pandoc $1 \
  -o $HOME/notes/$2 \
  --include-in-header $HOME/.config/pandoc/header.tex \
  --standalone \
  --metadata date="${CURRENTDATE}" \
  --pdf-engine=pdflatex
  # --toc \
  # --toc-depth=2 \

